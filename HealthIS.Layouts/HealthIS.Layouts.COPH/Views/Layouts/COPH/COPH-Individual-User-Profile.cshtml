@model HealthIS.Layouts.Models.COPH
@using Sitecore.Mvc
@using HealthIS.Apps.MVC
@Model.executeAutosave()

<div class="slick-shadow individual-user-profile">
   @if (!String.IsNullOrEmpty(Helpers.getRenderingId("Headline for Standard")))
    {
        @Html.Raw(Model.headlineOpen("standard-header coph-standard"));
        @Html.Sitecore().Placeholder("Headline for Standard")
        @Html.Raw(Model.headlineClose);
    } else {
        @Html.Sitecore().Placeholder("Headline for Standard") 
    }
    @Helpers.placeholderRequired("Headline for Standard")
    <div style="padding-top: 20px;" class="content-area first">
        <div class="row">
            <div class="col-sm-3 user-photo">
                @Html.Sitecore().Placeholder("Media") @Helpers.placeholderRequired("Media")
            </div>
            <div class="col-sm-9 user-contact">
                @Html.Sitecore().Placeholder("RichText Editor1")
            </div>
        </div>
    </div>

    @if (Sitecore.Context.PageMode.IsExperienceEditor)
    {
        <div class="content-area break">
            @Html.Sitecore().Placeholder("RichText Editor2")
        </div>
        <div class="content-area break">
            @Html.Sitecore().Placeholder("RichText Editor3")
        </div>
    } 
    else 
    {
        if (!String.IsNullOrEmpty(Helpers.getRenderingId("RichText Editor2")))
        {
            <div class="content-area break">
                @Html.Sitecore().Placeholder("RichText Editor2")
            </div>
        }
        if (!String.IsNullOrEmpty(Helpers.getRenderingId("RichText Editor3")))
        {
            <div class="content-area break">
                @Html.Sitecore().Placeholder("RichText Editor3")
            </div>
        }
    } 
</div>