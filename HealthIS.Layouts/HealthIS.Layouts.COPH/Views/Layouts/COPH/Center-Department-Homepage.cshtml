@model HealthIS.Layouts.Models.COPH
@using Sitecore.Mvc
@using HealthIS.Apps.MVC
@Model.executeAutosave()

<div class="slick-shadow">
    @if (!String.IsNullOrEmpty(Helpers.getRenderingId("Headline for Homepage")))
    {
        @Html.Raw(Model.headlineOpen("homepage-header coph-homepage"));
        @Html.Sitecore().Placeholder("Headline for Homepage")
        @Html.Raw(Model.headlineClose);
    } else {
        @Html.Sitecore().Placeholder("Headline for Homepage") 
    }
    @Helpers.placeholderRequired("Headline for Homepage")
    @Html.Sitecore().Placeholder("Media") @Helpers.placeholderRequired("Media")
    <div class="content-area first">
        @Html.Sitecore().Placeholder("RichText Editor1") @Helpers.placeholderRequired("RichText Editor1")
    </div>
    <div class="content-area break">
        @Html.Sitecore().Placeholder("RSS Feed") @Helpers.placeholderRequired("RSS Feed")
    </div>
</div>


